{
  "project": "behandlungsjournal",
  "services": [
    {
      "id": "web",
      "apps": [
        {
          "id": "node",
          "domain": {
            "uri": "behandlungsjournal.sloppy.zone"
          },
          "mem": 256,
          "ssl": true,
          "image": "mlabud/behandlungsjournal:0.4.9",
          "instances": 1,
          "port_mappings": [
            {
              "container_port": 3000
            }
          ],
          "env": {
            "MONGODB_URI": "mongodb://mongodb.db.behandlungsjournal/behandlungsjournal",
            "HAPROXY_0_REDIRECT_TO_HTTPS": "true"
          },
          "dependencies": [
            "../db/mongodb"
          ]
        }
      ]
    },
    {
      "id": "db",
      "apps": [
        {
          "id": "mongodb",
          "mem": 256,
          "image": "mongo:3.2.9",
          "cmd": "numactl --interleave=all mongod --smallfiles",
          "instances": 1,
          "volumes": [
            {
              "container_path": "/data/db",
              "size": "8GB"
            },
            {
              "container_path": "/data/configdb",
              "size": "8GB"
            }
          ]
        }
      ]
    }
  ]
}
